{
  "name": "fullstack-graphql",
  "version": "1.0.0",
  "description": "a fullstack graphQL application using MERN stack",
  "main": "index.js",
  "repository": "https://github.com/MohammedYoussefSoliman/fullstack-graphql.git",
  "author": "msoliman",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "apps/**"
  ],
  "devDependencies": {
    "@commitlint/cli": "^19.2.1",
    "@commitlint/config-conventional": "^19.1.0",
    "@types/lodash": "^4.17.0",
    "@types/node": "^20.12.2",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "lodash": "^4.17.21",
    "prettier": "^3.2.5"
  },
  "lint-staged": {
    "**/*.{js,ts,tsx}": [
      "eslint --fix"
    ],
    "**/*": "prettier --write --ignore-unknown"
  },
  "scripts": {
    "prepare": "husky",
    "dev:client": "cd ./apps/client/ && pnpm run dev",
    "dev:server": "cd ./apps/server/ && pnpm run dev",
    "build:client": "cd ./apps/client/ && pnpm run build",
    "build:server": "cd ./apps/server/ && pnpm run build",
    "dev": "pnpm -r run dev",
    "build": "pnpm -r run build"
  }
}
